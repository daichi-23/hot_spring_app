
  <div class="user-container">
    <div class="account-information">
      <div class="account-information-header" data-turbolinks="false">
        <h2>プロフィール</h2>
        <%= link_to "編集", edit_user_path(@user) %>
      </div>
      <div class="">
        <div class="account-information-item">
          <label class="account-information-label">アイコン画像</label>
          <% if @user.image? %>
            <%= image_tag @user.image.url, class: "icon-image" %>
          <% else %>
            <%= image_tag 'icon/default-icon.svg', class: "icon-image" %>
          <% end %>
        </div>
        <div class="account-information-item">
          <label class="account-information-label">名前</label>
          <%= @user.name %>
        </div>
        <div class="account-information-item">
          <label class="account-information-label">自己紹介</label>
          <%= @user.introduction %>
        </div>
        <div class="account-information-item">
          <label class="account-information-label">メールアドレス</label>
          <%= @user.email %>
        </div>
        <div class="account-information-item">
          <label class="account-information-label">パスワード</label>
          <p>*********</p>
        </div>       
      </div>
    </div>
  </div>

