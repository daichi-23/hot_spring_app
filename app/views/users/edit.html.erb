
  <div class="user-container">
    <%= render "shared/error_messages", obj: @user %>
    <div class="account-information">
      <div class="account-information-header">
        <h2>プロフィール編集</h2>
      </div>
      <div class="">
        <%= form_with model: @user, local: true do |f| %>
          <div class="account-information-item">
            <label class="account-information-label">アイコン画像</label>
            <%= f.file_field :image %>
            <p><%= f.check_box :remove_image %>画像を削除する</p>
          </div>
          <div class="account-information-item">
            <label class="account-information-label">名前</label>
            <%= f.text_field :name %>
          </div>
          <div class="account-information-item">
            <label class="account-information-label">自己紹介</label>
            <%= f.text_area :introduction %>
          </div>
        
          <div class="actions">
            <%= f.submit "保存" %>
            <%= link_to "キャンセル", user_path(@user) %>
          </div>

          <div>
            <%= link_to "アカウント情報を変更する", edit_user_registration_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

