<% if current_user.present? %>
  <% if onsen.favorited_by?(current_user) %>
    <%= link_to onsen_favorites_path(onsen), method: :delete do %>
      <i class="fa fa-heart red-link"></i>
      <%= onsen.favorites.count %>件
    <% end %>
  <% else %>
    <%= link_to onsen_favorites_path(onsen), method: :post do %>
        <i class="fa fa-heart-o"></i>
      <%= onsen.favorites.count %>件
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path do %>
    <i class="fa fa-heart-o"></i>
    <%= onsen.favorites.count %>件
  <% end %>
<% end %>