<!DOCTYPE html>
<html>
  <head>
    <title>HotSpringApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <div class="header-container">
          <h2 data-turbolinks="false"><%= link_to "Discover Hot Springs", "/" %></h2>
          <% if (!user_signed_in?) %>
            <div class="header-list" data-turbolinks="false">
              <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
              <%= link_to "ログイン", new_user_session_path %>
              <%= link_to "新規登録", new_user_registration_path, class: "button-orange" %>
            </div>
          <% else %>
            <div class="header-list" data-turbolinks="false">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "" %>
              <%= link_to "アカウント", user_path(current_user), class: "" %>
              <% if current_user.image? %>
                <%= image_tag current_user.image.url, class: "header-icon" %>
              <% else %>
                <%= image_tag 'icon/default-icon.svg', class: "header-icon" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </header>

      <p class="notice"><%= notice %></P>
      <P class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
